<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.PasswordField?>

<VBox stylesheets="@../css/styles.css" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.michaelstucki.java301capstone.controller.ControllerHome">
    <padding>
        <Insets top="30.0" right="20.0" bottom="100.0" left="20.0" />
    </padding>

    <ImageView fitWidth="350" preserveRatio="true">
        <Image url="@../images/trireme.png"/>
    </ImageView>

    <Label fx:id="pageTitle" text="home"/>
    <TextField fx:id="username" promptText="Username" focusTraversable="false"/>

    <StackPane>
        <PasswordField fx:id="passwordField" promptText="Password" focusTraversable="false"/>
        <TextField fx:id="password" visible="false" />
        <ImageView fx:id="eyeIcon" fitHeight="25" fitWidth="25" StackPane.alignment="CENTER_RIGHT"
                   onMouseClicked="#togglePasswordVisibility">
            <Image url="@../images/eye_closed.jpg" />
        </ImageView>
    </StackPane>

    <Button text="Sign In" onAction="#signInClick"/>

    <VBox alignment="CENTER" spacing="5">
        <Hyperlink text="forgot password?" onAction="#forgotPasswordClick" fx:id="forgotPassword"/>
        <Hyperlink text="create account?" onAction="#createAccountClick" fx:id="createAccount"/>
        <Hyperlink text="exit" onAction="#exitClick" fx:id="exit"/>
    </VBox>

    <Label fx:id="loginMessage"/>
</VBox>
