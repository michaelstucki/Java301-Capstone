<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<VBox stylesheets="@../css/styles.css" alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.michaelstucki.java301capstone.controller.ControllerDrill">
    <padding>
        <Insets right="200.0" bottom="50.0" left="200.0" />
    </padding>

    <ImageView fitWidth="250" fitHeight="250" preserveRatio="true">
        <Image url="@../images/trireme.png"/>
    </ImageView>

    <HBox alignment="CENTER" spacing="10">
        <Label text="Deck"/>
        <Label fx:id="deckName"/>
    </HBox>

    <VBox alignment="CENTER" spacing="15">
        <padding><Insets topRightBottomLeft="10"/></padding>
        <TextArea fx:id="questionAnswer" prefHeight="500"/>
        <HBox alignment="CENTER" spacing="20">
            <Button text="Pass" onAction="#passClick"/>
            <Button text="Fail" onAction="#failClick"/>
        </HBox>
    </VBox>

    <Hyperlink text="decks" onAction="#decksClick"/>
    <Hyperlink text="exit" onAction="#exitClick"/>
</VBox>
