<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.PasswordField?>

<VBox stylesheets="@../css/styles.css" alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.michaelstucki.java301capstone.controller.ControllerLogin">
    <padding>
        <Insets top="30.0" right="20.0" bottom="190.0" left="20.0" />
    </padding>

    <VBox alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml">
        <ImageView fitWidth="350" preserveRatio="true">
            <Image url="@../images/trireme.png"/>
        </ImageView>
    </VBox>

    <VBox alignment="CENTER" spacing="25.0" xmlns:fx="http://javafx.com/fxml">
        <padding>
            <Insets top="10.0" right="240.0" bottom="10.0" left="240.0" />
        </padding>
        <Label fx:id="pageTitle" text="login"/>

        <TextField fx:id="username" promptText="Username" focusTraversable="false"/>

        <VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml">
            <StackPane alignment="CENTER_LEFT">
                <PasswordField fx:id="passwordField" promptText="Password" focusTraversable="false"/>
                <TextField fx:id="password" visible="false" />
                <ImageView fx:id="eyeIcon" fitHeight="25" fitWidth="25" StackPane.alignment="CENTER_RIGHT"
                           onMouseClicked="#togglePasswordVisibility">
                    <Image url="@../images/eye_closed.jpg" />
                </ImageView>
            </StackPane>
        </VBox>

        <VBox alignment="CENTER" spacing="10">
            <Button text="Sign In" onAction="#signInClick"/>
            <Hyperlink text="forgot password?" onAction="#forgotPasswordClick" fx:id="forgotPassword"/>
            <Hyperlink text="create account?" onAction="#createAccountClick" fx:id="createAccount"/>
        </VBox>
        <Label fx:id="loginMessage"/>
    </VBox>
</VBox>
