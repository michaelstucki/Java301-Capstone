<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.PasswordField?>

<VBox stylesheets="@../css/styles.css" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.michaelstucki.java301capstone.controller.ControllerLogin">
    <padding>
        <Insets top="40.0" right="20.0" bottom="120.0" left="20.0" />
    </padding>

    <StackPane>
        <ImageView fitHeight="250" fitWidth="250" preserveRatio="true" StackPane.alignment="TOP_CENTER">
            <Image url="@../images/trireme.png"/>
        </ImageView>
        <Label fx:id="pageTitle" text="login" StackPane.alignment="BOTTOM_CENTER"/>
    </StackPane>

    <VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
        <padding>
            <Insets top="10.0" right="370.0" bottom="10.0" left="370.0" />
        </padding>

        <VBox spacing="5.0" xmlns:fx="http://javafx.com/fxml">
            <Label text="Username" styleClass="prompt-label"/>
            <TextField fx:id="username" promptText="Enter your username..."/>
        </VBox>

        <VBox spacing="5.0" xmlns:fx="http://javafx.com/fxml">
            <Label text="Password" styleClass="prompt-label"/>
            <StackPane alignment="CENTER_LEFT">
                <PasswordField fx:id="passwordField" promptText="Enter password..."/>
                <TextField fx:id="password" visible="false" />
                <ImageView fx:id="eyeIcon" fitHeight="25" fitWidth="25" StackPane.alignment="CENTER_RIGHT"
                           onMouseClicked="#togglePasswordVisibility">
                    <Image url="@../images/eye_closed.jpg" />
                </ImageView>
            </StackPane>
        </VBox>
    </VBox>

    <Label fx:id="loginMessage"/>

    <Button text="Sign In" onAction="#signInClick"/>

    <VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml">
        <Hyperlink text="home" onAction="#homeClick" fx:id="home"/>
        <Hyperlink text="create account" onAction="#createAccountClick" fx:id="createAccount"/>
        <Hyperlink text="forgot password" onAction="#forgotPasswordClick" fx:id="forgotPassword"/>
    </VBox>
</VBox>
