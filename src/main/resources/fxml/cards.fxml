<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<VBox stylesheets="@../css/styles.css" alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.michaelstucki.java301capstone.controller.ControllerCards">
    <padding>
        <Insets right="50.0" bottom="50.0" left="50.0" />
    </padding>

    <ImageView fitWidth="180" fitHeight="180" preserveRatio="true" StackPane.alignment="TOP_CENTER">
        <Image url="@../images/trireme.png"/>
    </ImageView>

    <HBox alignment="CENTER" spacing="10">
        <Label text="Deck"/>
        <Label fx:id="deckName"/>
    </HBox>

    <SplitPane dividerPositions="0.5, 0.5">
        <VBox alignment="CENTER" spacing="15">
            <padding><Insets topRightBottomLeft="10"/></padding>
            <TextArea fx:id="front" prefHeight="500"/>
            <TextArea fx:id="back" prefHeight="500"/>
            <HBox alignment="CENTER" spacing="10">
                <Button text="New" onAction="#newClick"/>
                <Button text="Cancel" onAction="#cancelClick"/>
                <Button text="Edit" onAction="#editClick"/>
            </HBox>
        </VBox>

        <VBox alignment="CENTER" spacing="10">
            <padding><Insets topRightBottomLeft="20"/></padding>
            <ListView fx:id="cardsView" layoutX="10.0" layoutY="10.0">
                <tooltip><Tooltip text="Click card to see front and back"/></tooltip>
            </ListView>
        </VBox>
    </SplitPane>

    <Label fx:id="userMessage"/>
    <Hyperlink text="decks" onAction="#decksClick"/>
    <Hyperlink text="exit" onAction="#exitClick"/>
</VBox>
