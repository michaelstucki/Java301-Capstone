<VBox stylesheets="@../css/styles.css" alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.michaelstucki.java301capstone.controller.ControllerForgotPassword">
    <padding>
        <Insets top="30.0" right="20.0" bottom="190.0" left="20.0" />
    </padding>

<!--    <VBox alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml">-->
<!--        <ImageView fitWidth="350" preserveRatio="true">-->
<!--            <Image url="@../images/trireme.png"/>-->
<!--        </ImageView>-->
<!--    </VBox>-->

    <VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml">
        <padding>
            <Insets top="10.0" right="240.0" bottom="10.0" left="240.0" />
        </padding>

        <Label fx:id="pageTitle" text="forgot password"/>

        <VBox spacing="5.0" xmlns:fx="http://javafx.com/fxml">
            <Label text="Username" styleClass="prompt-label"/>
            <TextField fx:id="username" promptText="Enter your username..."/>
        </VBox>

        <VBox spacing="5.0" xmlns:fx="http://javafx.com/fxml">
            <Label text="Security Question" styleClass="prompt-label"/>
            <TextField fx:id="securityAnswer" promptText="What's your favorite color?"/>
        </VBox>

        <Label fx:id="loginMessage"/>
        <Button text="Recover Password" onAction="#recoverPasswordClick"/>
        <Hyperlink text="login" onAction="#loginClick" fx:id="login"/>
    </VBox>
</VBox>
